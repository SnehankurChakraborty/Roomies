<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:facebook="http://schemas.android.com/apk/lib/com.facebook.widget.LoginButton"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.phaseii.rxm.roomies.fragments.Registeration"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="30dp"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:id="@+id/login_page">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/login"
		android:textAllCaps="true"
		android:textSize="40sp"
		android:textColor="@color/primary"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/into_your_room"
		android:layout_marginBottom="20dp"
		android:textColor="@color/primary"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/enter_username"
			style="@style/EditTextRoomies"
			android:id="@+id/username"
			android:inputType="text"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/username_error"/>


	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/enter_password"
			style="@style/EditTextRoomies"
			android:id="@+id/password"
			android:inputType="textPassword"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/password_error"/>

	</RelativeLayout>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/login"
		style="@style/ButtonRoomies"
		android:id="@+id/submit"/>


	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/signup"
		android:gravity="center_horizontal"
		android:id="@+id/signuplink"
		android:layout_marginTop="20dp"
		android:textColor="@color/roomies_color"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/or"
		android:layout_gravity="center"
		android:layout_marginTop="30dp"/>

	<com.google.android.gms.common.SignInButton
		android:id="@+id/gplus_sign_in_button"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="30dp"
		android:elevation="8dp"/>

	<!--<com.facebook.login.widget.LoginButton
		android:id="@+id/fb_login_button"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		facebook:confirm_logout="false"
		facebook:fetch_user_info="true"
		android:elevation="8dp"/>-->

</LinearLayout>
