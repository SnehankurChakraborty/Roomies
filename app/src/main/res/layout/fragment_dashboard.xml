<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/expense_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/sort_filter_tab"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="@color/primary_dark2"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Filter"
                    android:textColor="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Sort"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sort_menu"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/toolbar_container"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/accent_light"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Amount"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/amount"
                android:gravity="center_vertical"
                android:text="Quantity"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/quantity"
                android:gravity="center_vertical"
                android:text="Date"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_menu"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/toolbar_container"
            android:layout_marginLeft="10dp"
            android:background="@color/accent_light"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/bills"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Bills"/>

            <TextView
                android:id="@+id/grocery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/bills"
                android:gravity="center_vertical"
                android:text="Grocery"/>

            <TextView
                android:id="@+id/vegetables"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/grocery"
                android:gravity="center_vertical"
                android:text="Vegetables"/>

            <TextView
                android:id="@+id/others"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/vegetables"
                android:gravity="center_vertical"
                android:text="Others"/>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>