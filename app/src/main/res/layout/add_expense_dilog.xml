<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/Theme.AppCompat.Dialog"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">


	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="0,1,2,3"
		android:id="@+id/selector_layout">

		<TableRow>

			<LinearLayout
				android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_electricity_icon"
					android:gravity="center"
					android:textOn=""
					android:textOff=""
					android:layout_gravity="center"
					android:id="@+id/electricity_icon"
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Electricity"
					android:layout_gravity="center"
					android:textColor="@color/primaryColor"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_rent_icon"
					android:id="@+id/rent_icon"
					android:gravity="center"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center"
					android:text="Rent"
					android:textColor="@color/primaryColor"/>
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_maid_icon"
					android:id="@+id/maid_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Maid"
					android:layout_gravity="center"
					android:textColor="@color/primaryColor"/>
			</LinearLayout>

			<LinearLayout android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_misc_icon"
					android:id="@+id/misc_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="true"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Misc"
					android:layout_gravity="center"
					android:textColor="@color/primaryColor"/>
			</LinearLayout>


		</TableRow>

		<TableRow android:id="@+id/misc_row">

			<LinearLayout
				android:orientation="vertical"
				>

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_bills_icon"
					android:gravity="center"
					android:textOn=""
					android:textOff=""
					android:layout_gravity="center"
					android:id="@+id/bills_icon"
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Bills"
					android:layout_gravity="center"
					android:textColor="@color/primaryColor"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				>

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_grocery_icon"
					android:id="@+id/grocery_icon"
					android:gravity="center"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center"
					android:text="Grocery"
					android:textColor="@color/primaryColor"/>
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				>

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_vegetables_icon"
					android:id="@+id/vegetable_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Vegetables"
					android:layout_gravity="center"
					android:textColor="@color/primaryColor"/>
			</LinearLayout>

			<LinearLayout android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_others_icon"
					android:id="@+id/others_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="true"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Others"
					android:layout_gravity="center"
					android:textColor="@color/primaryColor"/>
			</LinearLayout>


		</TableRow>

	</TableLayout>

