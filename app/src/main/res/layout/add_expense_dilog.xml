<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/Theme.AppCompat.Dialog"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/catgeory_layout">

		<TextView
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:text="Category"
			android:textColor="@color/spinnerColor"
			android:id="@+id/category"
			android:layout_gravity="center"
			android:textSize="18sp"
			/>

		<Spinner
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/categoryspinner"
			android:layout_gravity="center_horizontal"
			android:layout_toRightOf="@id/category"
			android:layout_toEndOf="@id/category"
			style="@style/SpinnerRoomies"
			android:spinnerMode="dropdown"
			android:popupBackground="@drawable/menu_dropdown_panel_roomies"
			/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:id="@+id/subcatgeory_layout"
		android:layout_below="@id/catgeory_layout"
		>

		<TextView
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:text="Sub Category"
			android:textColor="@color/spinnerColor"
			android:id="@+id/subcategory"
			android:layout_gravity="center"
			android:textSize="18sp"/>

		<Spinner
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/subcategoryspinner"
			android:layout_gravity="center_horizontal"
			style="@style/SpinnerRoomies"
			android:spinnerMode="dropdown"
			/>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/description_layout"
		android:layout_below="@id/subcatgeory_layout">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Description"
			android:textColorHint="@color/spinnerColor"
			android:layout_centerHorizontal="true"
			android:id="@+id/description"
			style="@style/EditTextRoomies"
			android:textColor="@color/spinnerColor"
			android:enabled="false"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/description_error"/>


	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/description_layout"
		android:id="@+id/quantity_layout">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Quantity"
			android:textColorHint="@color/spinnerColor"
			android:layout_centerHorizontal="true"
			android:id="@+id/quantity"
			android:numeric="decimal"
			android:enabled="false"
			style="@style/EditTextRoomies"
			android:textColor="@color/spinnerColor"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/quantity_error"/>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/quantity_layout"
		android:id="@+id/amount_layout">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Amount"
			android:textColorHint="@color/spinnerColor"
			android:layout_centerHorizontal="true"
			android:id="@+id/amount"
			android:numeric="decimal"
			style="@style/EditTextRoomies"
			android:textColor="@color/spinnerColor"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/amount_error"/>
	</RelativeLayout>



	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@id/amount_layout"
		android:layout_centerHorizontal="true"
		android:stretchColumns="0,1">

		<TableRow>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cancel"
				style="@style/ButtonRoomies"
				android:id="@+id/negativeButton"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Submit"
				style="@style/ButtonRoomies"
				android:id="@+id/positiveButton"/>
		</TableRow>
	</TableLayout>


</RelativeLayout>