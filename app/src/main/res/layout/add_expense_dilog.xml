<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/Theme.AppCompat.Dialog"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">


	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="0,1,2,3"
		android:id="@+id/selector_layout">

		<TableRow>

			<LinearLayout
				android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_electricity_icon"
					android:gravity="center"
					android:textOn=""
					android:textOff=""
					android:layout_gravity="center"
					android:id="@+id/electricity_icon"
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Electricity"
					android:layout_gravity="center"
					android:textColor="@color/primary"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_rent_icon"
					android:id="@+id/rent_icon"
					android:gravity="center"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center"
					android:text="Rent"
					android:textColor="@color/primary"/>
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_maid_icon"
					android:id="@+id/maid_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Maid"
					android:layout_gravity="center"
					android:textColor="@color/primary"/>
			</LinearLayout>

			<LinearLayout android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_misc_icon"
					android:id="@+id/misc_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="true"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Misc"
					android:layout_gravity="center"
					android:textColor="@color/primary"/>
			</LinearLayout>


		</TableRow>

		<TableRow android:id="@+id/misc_row">

			<LinearLayout
				android:orientation="vertical"
				>

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_bills_icon"
					android:gravity="center"
					android:textOn=""
					android:textOff=""
					android:layout_gravity="center"
					android:id="@+id/bills_icon"
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Bills"
					android:layout_gravity="center"
					android:textColor="@color/primary"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				>

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_grocery_icon"
					android:id="@+id/grocery_icon"
					android:gravity="center"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center"
					android:text="Grocery"
					android:textColor="@color/primary"/>
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				>

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_vegetables_icon"
					android:id="@+id/vegetable_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="false"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Vegetables"
					android:layout_gravity="center"
					android:textColor="@color/primary"/>
			</LinearLayout>

			<LinearLayout android:orientation="vertical">

				<ToggleButton
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:background="@drawable/roomies_others_icon"
					android:id="@+id/others_icon"
					android:layout_gravity="center"
					android:textOn=""
					android:textOff=""
					android:checked="true"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="Others"
					android:layout_gravity="center"
					android:textColor="@color/primary"/>
			</LinearLayout>


		</TableRow>

	</TableLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/description_layout"
		android:layout_below="@id/selector_layout">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Description"
			android:textColorHint="@color/spinnerColor"
			android:layout_centerHorizontal="true"
			android:id="@+id/description"
			style="@style/EditTextRoomies"
			android:textColor="@color/spinnerColor"
			android:enabled="true"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/description_error"/>


	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/description_layout"
		android:id="@+id/quantity_layout">

		<TableLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:stretchColumns="0,1">

			<TableRow>

				<EditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Quantity"
					android:textColorHint="@color/spinnerColor"
					android:layout_centerHorizontal="true"
					android:id="@+id/quantity"
					android:numeric="decimal"
					android:enabled="true"
					style="@style/EditTextRoomies"
					android:textColor="@color/spinnerColor"
					android:gravity="center"/>

				<RadioGroup
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					style="@style/RadioButtonRoomies"
					android:id="@+id/quantity_radio">

					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="kg"
						android:textColor="@color/secondary_text"
						android:checked="true"/>

					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="pcs"
						android:textColor="@color/secondary_text"/>

				</RadioGroup>
			</TableRow>
		</TableLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/quantity_error"/>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/quantity_layout"
		android:id="@+id/amount_layout">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Amount"
			android:textColorHint="@color/spinnerColor"
			android:layout_centerHorizontal="true"
			android:id="@+id/amount"
			android:numeric="decimal"
			style="@style/EditTextRoomies"
			android:textColor="@color/spinnerColor"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/ErrorButton"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:id="@+id/amount_error"/>
	</RelativeLayout>


	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:stretchColumns="0,1"
		android:layout_below="@+id/amount_layout"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:id="@+id/tableLayout">

		<TableRow>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cancel"
				style="@style/ButtonRoomies"
				android:id="@+id/negativeButton"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Submit"
				style="@style/ButtonRoomies"
				android:id="@+id/positiveButton"/>
		</TableRow>
	</TableLayout>
</RelativeLayout>