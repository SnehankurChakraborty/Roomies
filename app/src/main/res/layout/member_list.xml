<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:id="@+id/member1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary5">


                <TextView
                    android:id="@+id/user_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Snehankur"
                    android:textColor="@color/white"
                    android:textSize="12pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name1"
                    android:layout_marginLeft="10dp"
                    android:text="October 2015"
                    android:textColor="@color/white"
                    android:textSize="5pt"/>


                <com.phaseii.rxm.roomies.view.RoomiesCircularImageView
                    android:id="@+id/user_image1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_user_filled"/>

                <Button
                    android:id="@+id/admin_btn1"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/user_image1"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rectangle_admin"
                    android:text="Admin"
                    android:textColor="@color/white"
                    android:textSize="4pt"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/spent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="24000"
                    android:textColor="@color/white"
                    android:textSize="14pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/spent_percent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spent1"
                    android:gravity="end"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="(2.09)62%"
                    android:textColor="@color/white"
                    android:textSize="5pt"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/member2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            app:cardElevation="5dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary5">


                <TextView
                    android:id="@+id/user_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Snehankur"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="12pt"/>

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name2"
                    android:layout_marginLeft="10dp"
                    android:text="October 2015"
                    android:textColor="@color/white"
                    android:textSize="5pt"/>


                <com.phaseii.rxm.roomies.view.RoomiesCircularImageView
                    android:id="@+id/user_image2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_user_filled"/>

                <Button
                    android:id="@+id/admin_btn2"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/user_image2"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rectangle_admin"
                    android:text="Admin"
                    android:textColor="@color/white"
                    android:textSize="4pt"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/spent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="24000"
                    android:textColor="@color/white"
                    android:textSize="14pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/spent_percent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_below="@id/spent2"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="(2.09)62%"
                    android:textColor="@color/white"
                    android:textSize="5pt"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>