<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


	<android.support.v7.widget.RecyclerView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="48dp"
		android:id="@+id/expense_detail_view"
		android:clipToPadding="false"/>

	<RelativeLayout
		android:id="@+id/toolbar_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/primary_dark_home"
			android:id="@+id/sort_filter_tab">

			<TableLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:stretchColumns="0,1">

				<TableRow>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:text="Filter"
						android:id="@+id/filter"
						android:gravity="center_vertical|center_horizontal"
						android:textColor="@color/white"
						android:textSize="14sp"
						android:fontFamily="sans-serif"
						android:textStyle="bold"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:text="Sort"
						android:id="@+id/sort"
						android:gravity="center_vertical|center_horizontal"
						android:textColor="@color/white"
						android:textSize="14sp"
						android:fontFamily="sans-serif"
						android:textStyle="bold"/>


				</TableRow>
			</TableLayout>
		</LinearLayout>

		<RelativeLayout
			android:layout_width="152dp"
			android:layout_height="wrap_content"
			android:id="@+id/sort_menu"
			android:orientation="horizontal"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:paddingLeft="16dp"
			android:layout_marginRight="13dp"
			android:background="@color/accent_light"
			android:layout_below="@id/sort_filter_tab"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:visibility="gone"
			android:layout_marginBottom="1dp"
			android:elevation="10dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center_vertical"
				android:text="Amount"
				android:textIsSelectable="true"
				android:id="@+id/amount"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center_vertical"
				android:text="Quantity"
				android:layout_below="@+id/amount"
				android:id="@+id/quantity"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center_vertical"
				android:text="Date"
				android:layout_below="@+id/quantity"
				android:id="@+id/date"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="152dp"
			android:layout_height="wrap_content"
			android:id="@+id/filter_menu"
			android:orientation="horizontal"
			android:background="@color/accent_light"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:paddingLeft="16dp"
			android:layout_marginLeft="13dp"
			android:layout_below="@id/sort_filter_tab"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginBottom="1dp"
			android:visibility="gone"
			android:elevation="10dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center_vertical"
				android:text="Bills"
				android:id="@+id/bills" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center_vertical"
				android:text="Grocery"
				android:id="@+id/grocery"
				android:layout_below="@id/bills" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center_vertical"
				android:text="Vegetables"
				android:id="@+id/vegetables"
				android:layout_below="@id/grocery" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center_vertical"
				android:text="Others"
				android:id="@+id/others"
				android:layout_below="@id/vegetables" />

		</RelativeLayout>

	</RelativeLayout>


</FrameLayout>