<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:left="10dp">
		<shape android:shape="rectangle">
			<size
				android:width="100dp"
				android:height="40dp" />
			<solid android:color="#FF9800" />
		</shape>
	</item>
	<item>
		<rotate
			android:fromDegrees="45"
			android:pivotX="90"
			android:pivotY="90">
			<shape android:shape="rectangle">
				<solid android:color="#FF9800" />
			</shape>
		</rotate>
	</item>
</layer-list>