<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
          android:keyHeight="15%p"
          android:keyWidth="15%p">

    <Row>
        <Key
            android:codes="1"
            android:horizontalGap="4%p"
            android:keyLabel="1"/>
        <Key
            android:codes="2"
            android:horizontalGap="4%p"
            android:keyLabel="2"/>
        <Key
            android:codes="3"
            android:horizontalGap="4%p"
            android:keyLabel="3"/>
    </Row>
    <Row>
        <Key
            android:codes="4"
            android:horizontalGap="4%p"
            android:keyLabel="4"/>
        <Key
            android:codes="5"
            android:horizontalGap="4%p"
            android:keyLabel="5"/>
        <Key
            android:codes="6"
            android:horizontalGap="4%p"
            android:keyLabel="6"/>

    </Row>
    <Row>
        <Key
            android:codes="7"
            android:horizontalGap="4%p"
            android:keyLabel="7"/>
        <Key
            android:codes="8"
            android:horizontalGap="4%p"
            android:keyLabel="8"/>
        <Key
            android:codes="9"
            android:horizontalGap="4%p"
            android:keyLabel="9"/>

    </Row>

    <Row>
        <Key
            android:codes="-1"
            android:horizontalGap="4%p"
            android:keyLabel="@drawable/ic_roomies_back"
            android:keyWidth="34%p"/>
        <Key
            android:codes="0"
            android:horizontalGap="4%p"
            android:keyLabel="0"/>
        <Key
            android:codes="100"
            android:horizontalGap="4%p"
            android:keyLabel="Enter"
            android:keyWidth="53%p"/>
    </Row>
</Keyboard>